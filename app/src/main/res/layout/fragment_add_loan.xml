<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addLoanFragment"
            type="tech.appclub.loanmanager.ui.AddLoanFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".ui.AddLoanFragment">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/holder_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/loan_holder_name"
                app:boxBackgroundColor="@android:color/white"
                app:boxBackgroundMode="filled"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextAppearance.AppCompat.Body2"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/holder_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:inputType="textPersonName|text"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:typeface="normal"
                    tools:text="Arslan Mushtaq" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/holder_amount_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/loan_amount"
                app:boxBackgroundColor="@android:color/white"
                app:boxBackgroundMode="filled"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextAppearance.AppCompat.Body2"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/holder_amount_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:inputType="number|numberDecimal"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:typeface="normal"
                    tools:text="1,000" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/select_currency"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Spinner
                android:id="@+id/countries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/currency_spinner_item_view" />

            <TextView
                android:id="@+id/received_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/select_received_date"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/received_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/start_date_hint"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/holo_green_dark" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/received_date_action"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="@{() -> addLoanFragment.selectReceivedDate()}"
                    android:padding="16dp"
                    android:src="@drawable/ic_calendar"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/holo_orange_dark" />

            </LinearLayout>

            <TextView
                android:id="@+id/payment_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/select_payment_date"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/payment_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/end_date_hint"
                    android:textColor="@android:color/black" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/payment_date_action"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="@{() -> addLoanFragment.selectPaymentDate()}"
                    android:padding="16dp"
                    android:src="@drawable/ic_calendar"
                    android:visibility="invisible"
                    app:backgroundTint="@android:color/holo_orange_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_action"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:text="@android:string/cancel"
                    app:backgroundTint="@android:color/holo_red_dark" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_loan_action"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:onClick="@{() -> addLoanFragment.addLoanAction()}"
                    android:text="@string/add_loan_fragment_title"
                    app:backgroundTint="@android:color/holo_green_dark" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>